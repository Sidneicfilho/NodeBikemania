{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('images/{{background}}')">{{title}}</section>
<h2>{{title}} disponiveis para venda </h2>
{{/banner}}

<div class="container list">
    {{#list}}
    <div class="item">
        <img src="images/{{image}}" class="item--image" />
        <div class="item--name">{{name}}</div>
        <div class="item--genre">Preço: R${{price}}</div>
    </div>
    {{/list}}
</div>


{{^list}}
    <div class="container no-list"
    <h2>Não encontramos produtos disponiveis com esse nome</h2>
    </div>
{{/list}}

{{>partials/footer}}